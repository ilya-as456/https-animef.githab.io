    <script>
        // –¢—ë–º–Ω–∞—è —Ç–µ–º–∞
        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
        }
        
        // –†–µ–∞–∫—Ü–∏—è –Ω–∞ –∫–ª–∏–∫
        function react() {
            const reactions = ["–ê–π!", "–£—Ñ—Ñ...", "–ù–µ —Ç—Ä–æ–≥–∞–π!", "‚ù§Ô∏è", ">_<"];
            const randomReaction = reactions[Math.floor(Math.random() * reactions.length)];
            document.getElementById("reaction").textContent = randomReaction;
            
            // –ê–Ω–∏–º–∞—Ü–∏—è —Ä—É–∫
            document.getElementById("left-arm").setAttribute("d", "M150 180 L130 220");
            document.getElementById("right-arm").setAttribute("d", "M150 180 L180 220");
            document.getElementById("mouth").setAttribute("d", "M140 120 Q150 110 160 120");
            
            setTimeout(() => {
                document.getElementById("left-arm").setAttribute("d", "M150 180 L120 200");
                document.getElementById("right-arm").setAttribute("d", "M150 180 L180 200");
                document.getElementById("mouth").setAttribute("d", "M140 120 Q150 130 160 120");
            }, 500);
        }
        
        // –°–º–µ–Ω–∞ –¥–µ–≤–æ—á–∫–∏ (–º–æ–∂–Ω–æ –∑–∞–º–µ–Ω–∏—Ç—å –Ω–∞ API)
        function changeGirl() {
            const girls = [
                { hair: "#FF69B4", dress: "#9370DB" },
                { hair: "#00CED1", dress: "#FFA07A" },
                { hair: "#FFD700", dress: "#FF6347" }
            ];
            const girl = girls[Math.floor(Math.random() * girls.length)];
            document.querySelector("circle[fill='#FFD5E5']").setAttribute("fill", girl.hair);
        }
    </script>
